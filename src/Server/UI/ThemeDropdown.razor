@namespace Belin.Base.UI
@using Belin.Base.Html

<theme-dropdown alignment="@Alignment.ToString()" label="@Label" storageKey="@StorageKey"></theme-dropdown>

@code {
	// The alignment of the dropdown menu.
	[Parameter]
	public MenuAlignment Alignment { get; set; } = MenuAlignment.End;

	// The label of the dropdown menu.
	[Parameter]
	public string Label { get; set; } = string.Empty;

	// The key of the storage entry providing the saved theme mode.
	[Parameter]
	public string StorageKey { get; set; } = "AppTheme";
}
