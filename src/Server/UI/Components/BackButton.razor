@namespace Belin.Base.UI.Components

<back-button steps="@Steps">
	@ChildContent
</back-button>

@code {
	/// <summary>
	/// The child content.
	/// </summary>
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	/// <summary>
	/// The number of pages to go back.
	/// </summary>
	[Parameter]
	public int Steps { get; set; } = 1;
}
