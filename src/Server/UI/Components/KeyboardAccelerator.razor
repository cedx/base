@namespace Belin.Base.UI.Components

<keyboard-accelerator key="@Key" modifiers="@Modifiers">
	@ChildContent
</keyboard-accelerator>

@code {
	/// <summary>
	/// The child content.
	/// </summary>
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	/// <summary>
	/// Identifies the key for the keyboard accelerator.
	/// </summary>
	[Parameter, EditorRequired]
	public required string Key { get; set => field = value.Trim(); }

	/// <summary>
	/// Identifies the modifiers for the keyboard accelerator.
	/// </summary>
	[Parameter]
	public KeyboardModifiers Modifiers { get; set; } = KeyboardModifiers.None;
}
